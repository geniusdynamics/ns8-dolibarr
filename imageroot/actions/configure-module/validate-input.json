{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Configure dolibarr",
    "$id": "http://nethserver.org/json-schema/task/input/dolibarr/configure-module",
    "description": "Configure dolibarr",
    "examples": [
        {
            "host": "dolibarr.domain.org",
            "http2https": true,
            "lets_encrypt": true,
            "ldap_domain": "ad.domain.org",
            "admin_users": "Administrator,user1"
        }
    ],
    "type": "object",
    "required": [
        "host",
        "http2https",
        "lets_encrypt",
        "ldap_domain",
        "admin_users"
    ],
    "properties": {
        "host": {
            "type": "string",
            "description": "Host name for the application, like 'dolibarr.domain.org'",
            "format": "idn-hostname"
        },
        "lets_encrypt": {
            "type": "boolean",
            "title": "Let's Encrypt certificate",
            "description": "Request a valid Let's Encrypt certificate."
        },
        "http2https": {
            "type": "boolean",
            "title": "HTTP to HTTPS redirection",
            "description": "Redirect all the HTTP requests to HTTPS"
        },
        "DOLI_ADMIN_PASSWORD": {
            "type": "string"
        },
        "DOLI_ADMIN_LOGIN": {
            "type": "string"
        },
        "ldap_domain": {
            "type": "string"
        },
        "admin_users": {
            "type": "string"
        }
    }
}