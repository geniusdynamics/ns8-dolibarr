{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Get dolibarr settings",
    "$id": "http://nethserver.org/json-schema/task/input/dolibarr/get-configuration",
    "description": "Get dolibarr settings",
    "examples": [
        {
            "host": "dolibarr.domain.org",
            "http2https": true,
            "lets_encrypt": true,
            "admin_users": "",
            "ldap_domain": "rocky9-pve4.org",
            "user_domains_list": [
                {
                    "name": "rocky9-pve4.org",
                    "label": "rocky9-pve4.org",
                    "value": "rocky9-pve4.org"
                },
                {
                    "name": "ad.rocky9-pve4.org",
                    "label": "ad.rocky9-pve4.org",
                    "value": "ad.rocky9-pve4.org"
                }
            ]
        }
    ],
    "type": "object",
    "required": [
        "host",
        "http2https",
        "lets_encrypt",
        "admin_users",
        "ldap_domain"
    ],
    "properties": {
        "host": {
            "type": "string",
            "description": "Host name for the application, like 'dolibarr.domain.org'",
            "format": "idn-hostname"
        },
        "lets_encrypt": {
            "type": "boolean",
            "title": "Let's Encrypt certificate",
            "description": "Request a valid Let's Encrypt certificate."
        },
        "http2https": {
            "type": "boolean",
            "title": "HTTP to HTTPS redirection",
            "description": "Redirect all the HTTP requests to HTTPS"
        },
        "admin_users": {
            "type": "string"
        },
        "ldap_domain": {
            "type": "string"
        },
        "user_domains_list": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "label": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "label",
                    "value"
                ]
            }
        }
    }
}